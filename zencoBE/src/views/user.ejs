<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <meta charSet="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Users</title>
    </head>
    <style>
        .button-actions {
            display: flex;
            flex-wrap: nowrap;
        }
        .action {
            margin: 4px;
        }
    </style>
    <body>
        <div class="user-info-container">
            <form action="/create-user" method="post">
                <div class="container">
                    <div class="row">
                        <div class="mb-3 col-6 mt-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input
                                type="email"
                                class="form-control"
                                id="exampleInputEmail1"
                                \
                                name="email"
                                aria-describedby="emailHelp"
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6 mt-3">
                            <label for="username" class="form-label">User Name</label>
                            <input type="text" class="form-control" name="username" id="username" />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6 mt-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="exampleInputPassword1" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="user-table-list container p-2">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">email</th>
                        <th scope="col">username</th>
                        <th scope="col">actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < userList.length; i++) { %>
                    <tr>
                        <th scope="row"><%=userList[i].id %></th>
                        <td><%=userList[i].email %></td>
                        <td><%=userList[i].username %></td>
                        <td>
                            <div class="button-actions">
                                <div class="action">
                                    <a href="/update-user/<%=userList[i].id %>"
                                        ><button type="button" class="btn btn-outline-warning">Edit</button></a
                                    >
                                </div>
                                <div class="action">
                                    <form action="/delete-user/<%=userList[i].id %>" method="post">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
